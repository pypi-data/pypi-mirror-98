{
  "version": "1",
  "name": "Ruleset for Fedora containers/images/dockerfiles.",
  "description": "This set of checks is defined by the Fedora Container Guidelines.",
  "contact_email": "user-cont-team@redhat.com",
  "checks": [
    {
      "name": "architecture_label"
    },
    {
      "name": "build-date_label"
    },
    {
      "name": "description_label"
    },
    {
      "name": "distribution-scope_label"
    },
    {
      "name": "help_label"
    },
    {
      "name": "io.k8s.description_label"
    },
    {
      "name": "url_label"
    },
    {
      "name": "vcs-ref_label"
    },
    {
      "name": "vcs-type_label"
    },
    {
      "name": "vcs-url_label"
    },
    {
      "names": [
        "com.redhat.component_label",
        "maintainer_label",
        "name_label",
        "release_label",
        "summary_label",
        "version_label"
      ],
      "additional_tags": ["required"]
    },
    {
      "names": [
        "from_tag_not_latest",
        "maintainer_deprecated",
        "description_or_io.k8s.description_label"
      ],
      "additional_tags": ["required"],
      "usable_targets": ["dockerfile"]
    },
    {
      "names": ["help_file_or_readme", "run_or_usage_label"],
      "additional_tags": ["required"],
      "usable_targets": ["image", "container"]
    },
    {
      "names": ["inherited_labels"],
      "labels_list": [
        "summary",
        "description",
        "io.k8s.description",
        "io.k8s.display-name",
        "io.openshift.tags"
      ],
      "additional_tags": ["required"],
      "usable_targets": ["image"]
    }
  ]
}
