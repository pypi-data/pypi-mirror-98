#!/bin/sh

. $(dirname $0)/test_helper.sh

test_null() {
  run tuxmake --print-support-matrix
  assertEquals 0 "${rc}"
}

test_docker() {
  run tuxmake --runtime=docker --print-support-matrix
  assertEquals 0 "${rc}"
}

test_docker_local() {
  run tuxmake --runtime=docker-local --print-support-matrix
  assertEquals 0 "${rc}"
}

test_podman() {
  run tuxmake --runtime=podman --print-support-matrix
  assertEquals 0 "${rc}"
}

test_podman_local() {
  run tuxmake --runtime=podman-local --print-support-matrix
  assertEquals 0 "${rc}"
}

. /usr/share/shunit2/shunit2
