{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Problem Reference Grading Category",
  "description": "Weight and points for a particular grading category.",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "weight": {
      "type": "string",
      "pattern": "^(\\d*\\.)?\\d+$"
    },
    "points": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^(\\d*\\.)?\\d+$"
    }
  }
}
