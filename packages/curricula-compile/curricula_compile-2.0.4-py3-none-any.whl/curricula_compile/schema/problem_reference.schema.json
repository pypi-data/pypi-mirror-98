{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Problem Reference",
  "description": "Reference to a problem from an assignment problem list.",
  "type": "object",
  "properties": {
    "path": {
      "type": "string"
    },
    "short": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "target_directory": {
      "type": "string"
    },
    "grading": {
      "$ref": "problem_reference_grading.schema.json"
    }
  },
  "required": [
    "path",
    "grading"
  ]
}
