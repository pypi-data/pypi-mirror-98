{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "lib": ["dom", "es6"],
    "noEmitOnError": false,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "outDir": "build",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "types": [
      "mocha"
    ]
  },
  "include": [
    "src/*.ts",
    "../src/*"
  ]
}