<form
    i18n:domain="Kotti"
    class="navbar-form navbar-right"
    action="${api.url(api.root)}@@search-results"
    method="post" role="search"
    id="form-search">
  <div class="form-group">
    <input
      type="search"
      name="search-term"
      class="form-control"
      placeholder="Search..."
      i18n:attributes="placeholder" />
  </div>
  <button
    type="submit"
    name="search-submit"
    value="search"
    class="btn btn-default"
    style="display: none;">&#8594;</button>
</form>
