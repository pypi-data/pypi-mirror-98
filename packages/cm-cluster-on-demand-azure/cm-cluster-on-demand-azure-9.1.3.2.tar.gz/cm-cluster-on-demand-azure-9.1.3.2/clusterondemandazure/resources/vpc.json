{
            "condition": "[equals(parameters('create_new_vnet'),'true')]",
            "comments": "",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vnet_name')]",
            "apiVersion": "2016-03-30",
            "location": "[parameters('region')]",
            "tags" : {
              "BCM Resource": true
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('network_cidr')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[concat(parameters('vnet_name'),'-subnet')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet_cidr')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('security_group').name)]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('security_group').name)]"
            ]
        }
