<div class="input-group date"
	 data-target-input="nearest">
	<div class="input-group-prepend"
		 data-target="#${view.id}-dt"
		 data-toggle="datetimepicker">
		<div class="input-group-text">
			<i class="fas fa-calendar"></i>
		</div>
	</div>
	<input type="hidden"
		   id="${view.id}"
		   name="${view.name}"
		   value="${view.value}" />
	<input type="text"
		   id="${view.id}-dt"
		   class="form-control datetime datetimepicker-input ${view.klass}"
		   style="${view.style}"
		   lang="${view.lang}"
		   disabled
		   readonly="${view.readonly}"
		   alt="${view.alt}"
		   tabindex="${view.tabindex}"
		   accesskey="${view.accesskey}"
		   size="${view.size}"
		   maxlength="${view.maxlength}"
		   value="${view.value}"
		   placeholder="${view.placeholder}"
		   autocomplete="${view.autocomplete}"
		   autocapitalize="${view.autocapitalize}"
		   onclick="${view.onclick}"
		   ondblclick="${view.ondblclick}"
		   onmousedown="${view.onmousedown}"
		   onmouseup="${view.onmouseup}"
		   onmouseover="${view.onmouseover}"
		   onmousemove="${view.onmousemove}"
		   onmouseout="${view.onmouseout}"
		   onkeypress="${view.onkeypress}"
		   onkeydown="${view.onkeydown}"
		   onkeyup="${view.onkeyup}"
		   onfocus="${view.onfocus}"
		   onblur="${view.onblur}"
		   onchange="${view.onchange}"
		   onselect="${view.onselect}"
		   data-target="${view.id}-dt"
		   data-ams-format="L"
		   data-ams-iso-target="#${view.id}"
		   data-ams-data="${tales:object_data(view)}" />
</div>