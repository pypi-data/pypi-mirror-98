        invalid-name,
        line-too-long,
        missing-function-docstring,
        missing-module-docstring,
        no-member,
        no-name-in-module,
        not-callable,
        raise-missing-from,
        undefined-variable,
        wrong-import-order,
        wrong-import-position

enable=unused-argument,
       unused-wildcard-import,
       redefined-builtin,
       bad-indentation,
       mixed-indentation,
       unreachable
